[colors]
foreground-alt = #D8D8D8
bluebg = #7cd0d6
urgbg = #fc6a6a
bg    = ${xrdb:color0}
hbg   = ${xrdb:color1}
ubg   = ${xrdb:color15}

[bar/main]
monitor = eDP1
height = 30
width = 100%

overline-size = 2
underline-size = 2

background = ${colors.bg}
foreground = ${colors.foreground-alt}
underline-color = #00f
overline-color = #f00

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 2
module-margin-right = 2

font-0 = Dina:style=Regular:pixelsize=10;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = MaterialDesignIcons:pixelsize=11;1

modules-left = bspwm
modules-center = date
modules-right = redshift battery network volume icon mail

pin-workspaces = true
wm-restack = bspwm

[module/title]
type = internal/xwindow
label = %title%
label-maxlen = 50

[module/icon]
type = custom/script
format-background = ${colors.hbg}
format-padding = 1
exec =  echo ""

[module/mail]
type=custom/script
