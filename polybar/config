[colors]
foreground-alt = #D8D8D8
foreground = #555555
blue = #7495B6
primary = #FFB52A
alert = #BD2C40

[global/wm]
margin-top = 5
margin-bottom = 5
margin-left = 5
margin-right = 5

[bar/main]
monitor = eDP1
background = #9a101112
foreground = ${colors.foreground-alt}
width = 1900
offset-x = 10
offset-y = 5
height = 30

overline-size = 2
underline-size = 2

underline-color = #00f
overline-color = #f00

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 2
module-margin-right = 2

font-0 = ypn envypn:style=Regular:pixelsize=10;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = FontAwesome:pixelsize=11;1

modules-left = bspwm
modules-center = date
modules-right = redshift mail volume network battery powermenu

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/mail]
type = custom/script
interval = 10
format = <label>
format-prefix = "  "
format-foreground = ${colors.foreground-alt}
exec = python3 ~/.scripts/mail

[module/redshift]
type = custom/script
exec = redshift.sh

[module/network]
type = custom/script
format-foreground = ${colors.foreground-alt}
exec = connectivity

[module/volume]
type = internal/volume
